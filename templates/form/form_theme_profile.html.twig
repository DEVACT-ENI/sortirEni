{% block form_row %}
    <div class="row mb-3">
        <div class="col-sm-4 d-flex align-items-center justify-content-end">
            <h6 class="mb-0">{{ label }}</h6>
        </div>
        <div class="col-sm-8 text-secondary">
            {{ form_widget(form) }}
        </div>
    </div>
{% endblock %}

{% block form_widget_simple %}
    <input type="{{ type|default('text') }}" class="form-control" value="{{ value|default('') }}">
{% endblock %}

{% block button_widget %}
    <button type="{{ type|default('button') }}" class="btn btn-primary">{{ label|default('Submit') }}</button>
{% endblock %}